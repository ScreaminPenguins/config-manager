#!/usr/bin/env bash

WORK="$HOME/Repositories/work"
PERSONAL="$HOME/Repositories/personal"

if [[ $# -eq 1 ]]; then
	selected=$1
else
	selected=$(find "$WORK" "$PERSONAL" "$DOTFILES" -mindepth 1 -maxdepth 2 -type d | grep -v -E "\.git" | fzf --border=double)
fi

if [[ -z $selected ]]; then
	exit 0
fi

selected_name=$(basename "$selected" | tr . _)

if ! tmux has-session -t="$selected_name" 2>/dev/null; then
	tmux new-session -d -s "$selected_name" -n "Nvim" -c "$selected"
	tmux new-window -t "$selected_name" -n "Shell" -c "$selected"

	tmux send-keys -t "$selected_name:0" nvim ENTER
fi

if [[ -n "${TMUX:-}" ]]; then
	tmux switch-client -t "$selected_name"
else
	tmux attach-session -t "$selected_name"
fi
